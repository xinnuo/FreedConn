<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_size_40"
        android:layout_marginStart="@dimen/dimen_size_30"
        android:layout_marginTop="@dimen/dimen_size_30"
        android:layout_marginEnd="@dimen/dimen_size_30"
        android:background="@mipmap/input01"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/network_name"
            style="@style/Font14_blue_light"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:hint="@string/network_noName"
            android:paddingStart="@dimen/dimen_size_10"
            android:paddingEnd="@dimen/dimen_size_10"
            android:singleLine="true"
            android:textColorHint="@color/blue_medium_alpha"
            tools:ignore="Autofill,TextFields" />

    </LinearLayout>

    <Button
        android:id="@+id/bt_save"
        style="@style/Font18_blue_light"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_size_70"
        android:layout_marginStart="@dimen/dimen_size_22"
        android:layout_marginTop="@dimen/dimen_size_30"
        android:layout_marginEnd="@dimen/dimen_size_22"
        android:background="@mipmap/btn01"
        android:onClick="doClick"
        android:text="@string/bind_save" />

</LinearLayout>