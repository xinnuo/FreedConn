<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_size_50"
            android:layout_marginTop="@dimen/dimen_size_20"
            android:layout_marginBottom="@dimen/dimen_size_30"
            android:src="@mipmap/logo02"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_size_40"
            android:layout_marginStart="@dimen/dimen_size_30"
            android:layout_marginEnd="@dimen/dimen_size_30"
            android:background="@mipmap/input01"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/dimen_size_40"
                android:layout_height="@dimen/dimen_size_17"
                android:src="@mipmap/icon01"
                tools:ignore="ContentDescription" />

            <EditText
                android:id="@+id/et_tel"
                style="@style/Font15_blue_light"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:hint="@string/register_noTel"
                android:inputType="number"
                android:maxLength="11"
                android:maxLines="1"
                android:paddingStart="@dimen/dimen_size_5"
                android:paddingEnd="@dimen/dimen_size_10" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_size_40"
            android:layout_marginStart="@dimen/dimen_size_30"
            android:layout_marginTop="@dimen/dimen_size_20"
            android:layout_marginEnd="@dimen/dimen_size_30"
            android:background="@mipmap/input01"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/dimen_size_40"
                android:layout_height="@dimen/dimen_size_15"
                android:src="@mipmap/icon03"
                tools:ignore="ContentDescription" />

            <EditText
                android:id="@+id/et_code"
                style="@style/Font15_blue_light"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:digits="0123456789qwertyuioplkjhgfdsazxcvbnmQWERTYUIOPLKJHGFDSAZXCVBNM"
                android:hint="@string/register_noCode"
                android:inputType="textEmailAddress"
                android:maxLength="6"
                android:maxLines="1"
                android:paddingStart="@dimen/dimen_size_5"
                android:paddingEnd="@dimen/dimen_size_10" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_size_40"
            android:layout_marginStart="@dimen/dimen_size_30"
            android:layout_marginTop="@dimen/dimen_size_20"
            android:layout_marginEnd="@dimen/dimen_size_30"
            android:background="@mipmap/input01"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/dimen_size_40"
                android:layout_height="@dimen/dimen_size_15"
                android:src="@mipmap/icon04"
                tools:ignore="ContentDescription" />

            <EditText
                android:id="@+id/et_name"
                style="@style/Font15_blue_light"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:hint="@string/register_noName"
                android:maxLength="16"
                android:maxLines="1"
                android:paddingStart="@dimen/dimen_size_5"
                android:paddingEnd="@dimen/dimen_size_10" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_size_40"
            android:layout_marginStart="@dimen/dimen_size_30"
            android:layout_marginTop="@dimen/dimen_size_20"
            android:layout_marginEnd="@dimen/dimen_size_30"
            android:background="@mipmap/input01"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/dimen_size_40"
                android:layout_height="@dimen/dimen_size_15"
                android:src="@mipmap/icon05"
                tools:ignore="ContentDescription" />

            <EditText
                android:id="@+id/et_email"
                style="@style/Font15_blue_light"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:hint="@string/register_noEmail"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:paddingStart="@dimen/dimen_size_5"
                android:paddingEnd="@dimen/dimen_size_10"
                android:singleLine="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_size_40"
            android:layout_marginStart="@dimen/dimen_size_30"
            android:layout_marginTop="@dimen/dimen_size_20"
            android:layout_marginEnd="@dimen/dimen_size_30"
            android:background="@mipmap/input01"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/dimen_size_40"
                android:layout_height="@dimen/dimen_size_15"
                android:src="@mipmap/icon02"
                tools:ignore="ContentDescription" />

            <EditText
                android:id="@+id/et_pwd"
                style="@style/Font15_blue_light"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:hint="@string/register_noPwd"
                android:inputType="textPassword"
                android:maxLength="20"
                android:paddingStart="@dimen/dimen_size_5"
                android:paddingEnd="@dimen/dimen_size_10" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_size_40"
            android:layout_marginStart="@dimen/dimen_size_30"
            android:layout_marginTop="@dimen/dimen_size_20"
            android:layout_marginEnd="@dimen/dimen_size_30"
            android:background="@mipmap/input01"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/dimen_size_40"
                android:layout_height="@dimen/dimen_size_15"
                android:src="@mipmap/icon02"
                tools:ignore="ContentDescription" />

            <EditText
                android:id="@+id/et_confirm"
                style="@style/Font15_blue_light"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:hint="@string/register_noConfirm"
                android:inputType="textPassword"
                android:maxLength="20"
                android:paddingStart="@dimen/dimen_size_5"
                android:paddingEnd="@dimen/dimen_size_10" />

        </LinearLayout>

        <Button
            android:id="@+id/bt_register"
            style="@style/Font18_blue_light"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_size_70"
            android:layout_marginStart="@dimen/dimen_size_22"
            android:layout_marginTop="@dimen/dimen_size_30"
            android:layout_marginEnd="@dimen/dimen_size_22"
            android:background="@mipmap/btn01"
            android:onClick="doClick"
            android:text="@string/register" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_size_30"
            android:layout_marginEnd="@dimen/dimen_size_30"
            android:layout_marginBottom="@dimen/dimen_size_20">

            <TextView
                style="@style/Font13_blue_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/dimen_size_10"
                android:paddingTop="@dimen/dimen_size_10"
                android:paddingEnd="@dimen/dimen_size_0"
                android:paddingBottom="@dimen/dimen_size_10"
                android:text="@string/register_hint1" />

            <TextView
                android:id="@+id/tv_deal"
                style="@style/Font13_blue_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="doClick"
                android:paddingStart="@dimen/dimen_size_0"
                android:paddingTop="@dimen/dimen_size_10"
                android:paddingEnd="@dimen/dimen_size_10"
                android:paddingBottom="@dimen/dimen_size_10"
                android:text="@string/register_hint2" />

        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>