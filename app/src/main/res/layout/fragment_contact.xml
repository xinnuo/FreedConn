<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ruanmeng.fragment.ContactFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_size_80"
        android:background="@mipmap/top01"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_size_45"
            android:layout_marginTop="@dimen/dimen_size_20"
            android:gravity="center_vertical"
            tools:ignore="UselessParent">

            <ImageView
                android:id="@+id/contact_back"
                android:layout_width="@dimen/dimen_size_35"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:paddingTop="@dimen/dimen_size_15"
                android:paddingBottom="@dimen/dimen_size_15"
                android:src="@mipmap/icon12"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_size_30"
                android:layout_marginEnd="@dimen/dimen_size_20"
                android:background="@mipmap/input02"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/dimen_size_15"
                    android:layout_height="@dimen/dimen_size_15"
                    android:layout_marginStart="@dimen/dimen_size_10"
                    android:src="@mipmap/icon13"
                    tools:ignore="ContentDescription" />

                <EditText
                    android:id="@+id/contact_edit"
                    style="@style/Font14_blue_light"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:hint="@string/network_look"
                    android:imeOptions="actionSearch"
                    android:paddingStart="@dimen/dimen_size_10"
                    android:paddingEnd="@dimen/dimen_size_10"
                    android:singleLine="true"
                    tools:ignore="Autofill,TextFields" />

                <ImageView
                    android:id="@+id/contact_close"
                    android:layout_width="@dimen/dimen_size_31"
                    android:layout_height="match_parent"
                    android:padding="@dimen/dimen_size_8"
                    android:src="@mipmap/icon22"
                    android:visibility="gone"
                    tools:ignore="ContentDescription,RtlSymmetry" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/layout_list" />

</LinearLayout>