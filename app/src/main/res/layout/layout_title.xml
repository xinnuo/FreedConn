<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_title"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_marginTop="@dimen/dimen_size_20"
    android:background="?attr/colorPrimary">

    <TextView
        android:id="@id/tv_nav_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/dimen_size_60"
        android:layout_marginEnd="@dimen/dimen_size_60"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_size_18" />

    <TextView
        android:id="@id/tv_nav_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|end"
        android:gravity="center"
        android:onClick="doClick"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_size_15" />

    <ImageView
        android:id="@id/iv_nav_back"
        android:layout_width="@dimen/dimen_size_90"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:onClick="doClick"
        android:paddingStart="@dimen/dimen_size_0"
        android:paddingTop="@dimen/dimen_size_15"
        android:paddingEnd="@dimen/dimen_size_45"
        android:paddingBottom="@dimen/dimen_size_15"
        android:src="@mipmap/icon12"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@id/iv_nav_right"
        android:layout_width="@dimen/dimen_size_45"
        android:layout_height="@dimen/dimen_size_45"
        android:layout_gravity="center_vertical|end"
        android:onClick="doClick"
        android:visibility="invisible"
        tools:ignore="ContentDescription" />

</FrameLayout>