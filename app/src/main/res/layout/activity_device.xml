<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/device_remote"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_size_78"
        android:layout_marginStart="@dimen/dimen_size_10"
        android:layout_marginTop="@dimen/dimen_size_10"
        android:layout_marginEnd="@dimen/dimen_size_10"
        android:background="@mipmap/bj03"
        android:gravity="center_vertical"
        android:onClick="doClick"
        android:paddingStart="@dimen/dimen_size_30"
        android:paddingTop="@dimen/dimen_size_5"
        android:paddingEnd="@dimen/dimen_size_30">

        <TextView
            style="@style/Font15_white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/device_remote" />

        <ImageView
            android:layout_width="@dimen/dimen_size_12"
            android:layout_height="@dimen/dimen_size_12"
            android:src="@mipmap/icon41"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/device_bluetooth"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_size_78"
        android:layout_marginStart="@dimen/dimen_size_10"
        android:layout_marginTop="@dimen/dimen_size_10"
        android:layout_marginEnd="@dimen/dimen_size_10"
        android:background="@mipmap/bj03"
        android:gravity="center_vertical"
        android:onClick="doClick"
        android:paddingStart="@dimen/dimen_size_30"
        android:paddingTop="@dimen/dimen_size_5"
        android:paddingEnd="@dimen/dimen_size_30">

        <TextView
            style="@style/Font15_white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/device_bluetooth" />

        <ImageView
            android:layout_width="@dimen/dimen_size_12"
            android:layout_height="@dimen/dimen_size_12"
            android:src="@mipmap/icon41"
            tools:ignore="ContentDescription" />

    </LinearLayout>

</LinearLayout>